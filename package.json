{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "start": "npm run watch:auto",
    "watch:auto": "concurrently \"npm run watch:ts\" \"npm run watch:sass\"",
    "ts-w": "tsc --watch",
    "sass-w": "sass --watch resources/sass/main.scss public/css/app.css"
  },
  "devDependencies": {
    "axios": "^1.6",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "laravel-mix": "^6.0.6",
    "lodash": "^4.17.19",
    "node-fetch": "^3.3.2",
    "node-sass": "^9.0.0",
    "postcss": "^8.1.14",
    "prettier": "^3.0.3",
    "sass-loader": "^13.3.2",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "sass": "^1.69.5"
  }
}
